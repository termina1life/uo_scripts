if varexist debug
    sysmsg 'Mage.life_support.areHurt.razor'
    overhead 'Mage.life_support.areHurt.razor'
endif
//O' Shit Heal
hotkey "Target Closest Non-Friendly Monster"
if noto lasttarget = murderer or noto lasttarget = criminal and find lasttarget ground -1 -1 3
    if diffhits > 30
        if findtype "Yellow Potion" backpack
            hotkey 'Drink Heal'
            wait 100
        endif
    endif
    for 2
        if diffhits > 12
            cast 'Heal'
            waitfortarget 
            target 'self'
            wait 500
        else
            brake
        endif
    endfor
endif

if hp < maxhp - 65 and varexist haveHealPots and not cooldown 'Heal'
    if findtype "Yellow Potion" backpack
        hotkey 'Drink Heal'
        wait 250
    else
        overhead 'Out of heals!' 34
        @unsetvar haveHealPots
    endif
endif

if hp < maxhp
    if diffhits > 40
        #TODO may need to test for target range.
        cast 'Greater Heal'
        waitfortarget
        target 'self'
        wait 500
    elseif diffhits > 12
        #TODO may need to test for target range.
        cast 'Heal'
        waitfortarget 
        target 'self'
        wait 500
    endif
endif
script 'Mage\masters\lifeSupport'