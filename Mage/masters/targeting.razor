if varexist myTarget and varexist extraMode
    overhead "removing my target"
    @unsetvar myTarget
elseif not varexist myTarget and varexist extraMode 
    overhead "set mytarget"
    setvar myTarget
elseif not targetexists 'harmful'
    hotkey 'Last Target'
    if not targetexists 'harmful'
        if varexist PkMode
            //Prioritize the closest PK
            hotkey "Target Closest Non-Friendly Monster"
        else
            hotkey 'Target Closest Grey Monster'
        endif
        @setvar! myTarget lasttarget
    endif
endif