if findlayer self outerbody as satchel

    @setvar! t
    
    if findtype 'Mandrake Root%s%' satchel as m
        overhead 'dropping mandrake root'
        lift m 2
        drop t
        wait 500
    else
        overhead 'no mandrake root'
    endif
    
    if findtype 'Blood Moss' satchel as b
        overhead 'dropping blood moss'
        lift b 2
        drop t
        wait 500
    else
        overhead 'no blood moss'
    endif
    
    if findtype "Spider's Silk" satchel as s
        overhead 'dropping spider silk'
        lift s 2
        drop t
        wait 500
    else
        overhead 'no spider silk'
    endif
    
else
    overhead 'no satchel'
endif