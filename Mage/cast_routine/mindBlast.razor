if varexist myTarget
    overhead 'Already have a target!'
elseif not targetexists 'harmful' #['any'/'beneficial'/'harmful'/'neutral']
    hotkey 'Last Target'
    if not targetexists 'harmful'
        if varexist PkMode
            //Prioritize the closest PK
            hotkey "Target Closest Non-Friendly Monster"
        else
            hotkey 'Target Closest Grey Monster'
        endif
        @setvar! myTarget lasttarget
    endif
endif
if varexist myTarget
    cast 'Mind Blast'
    waitfortarget 
    target myTarget
    wait 500
endif
