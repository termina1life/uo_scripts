## Bandage sequence
if hp < maxhp
    if not bandaging and varexist haveHealing and varexist haveBandages
        if findtype "clean bandage%s%" backpack
            hotkey "Bandage Self"
            wait 50
        else
            overhead "Out of bandages!" 34
            @unsetvar haveBandages
        endif
    endif
    if diffhits > 60 and haveHealPots and not cooldown 'Heal'
        if findtype "Orange Potion" backpack
            hotkey 'Drink Heal'
            wait 250
        else
            overhead 'Out of heals!' 34
            @unsetvar haveHealP
        endif
    endif
    if varexist haveMagery
        if not bandaging and diffhits > 0
            script 'harvesting\mining\life_support\magery'
        else
            script 'harvesting\mining\life_support\lifeSupport'
        endif
    endif
    if varexist haveChivalry
        if not bandaging and diffhits > 20
            script 'harvesting\mining\life_support\chivalry'
        else
            script 'harvesting\mining\life_support\lifeSupport'
        endif
    endif
endif
script 'harvesting\mining\life_support\lifeSupport'
