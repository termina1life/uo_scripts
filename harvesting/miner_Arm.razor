
#If hand empty, you may have been disarmed.
if rhandempty and findtype "mace" as main
    overhead "Arming Mace"
    dclick main
    
elseif findlayer self righthand as item
    getlabel item item_description
    if "pickaxe" in item_description
        if findtype "mace" as main
            overhead "Arming Mace"
            dclick main
        endif
    elseif findtype "pickaxe" backpack as main
        overhead "Arming PickAxe"
        dclick main
    endif
endif