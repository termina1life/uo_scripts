/// Hiding to Stealth section
if not hidden
    skill 'Hiding'
    wait 100
    organizer 1
    /// MainBackStabWeapon is the weapon you use to backstab.
    if lhandempty
        dress 'mbsw'
    endif
    wait 300
    if hidden
        wait 6000
    endif
    foreach 'x' in 'mylist'
        if hidden
            overhead 'x'
            wait 900
        else
            overhead 'Not Hidden' 38
            break
        endif
        if insysmsg "distance"
            overhead 'Red in Area' 38
    endfor
    if hidden
        wait 300
    skill 'Stealth'
    overhead 'Go Go Go' 68
    endif
else
    skill 'Stealth'
    overhead 'Go Go Go' 68
endif
