// Set & Unset PK Mode
// set variable PkMode to true or false for use in other scripts
if varexist PkMode
    if varexist utilityMode
        overhead "Utility Mode Off"
        unsetvar! utilityMode
    endif
    unsetvar! PkMode
    overhead "Monster Mode"
else
    if varexist utilityMode
        overhead "Utility Mode Off"
        unsetvar! utilityMode
    endif
    setvar! PkMode 1
    overhead "Player Mode"
endif
script RedAlert
script 'mugger\RedAlert'